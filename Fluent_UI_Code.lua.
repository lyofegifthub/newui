-- Fluent UI Library untuk Roblox
local FluentUI = {}

function FluentUI:CreateWindow(settings)
    local Window = {
        Title = settings.Title or "Fluent UI",
        Size = settings.Size or UDim2.new(0, 400, 0, 300),
        Tabs = {}
    }
    print("Window Created:", Window.Title)

    function Window:AddTab(name)
        local Tab = {
            Name = name,
            Elements = {}
        }
        table.insert(self.Tabs, Tab)
        print("Tab Created:", name)

        function Tab:AddButton(text, callback)
            table.insert(self.Elements, { Type = "Button", Text = text, Callback = callback })
            print("Button Added:", text)
        end

        function Tab:AddSlider(name, min, max, callback)
            table.insert(self.Elements, { Type = "Slider", Name = name, Min = min, Max = max, Callback = callback })
            print("Slider Added:", name)
        end

        function Tab:AddToggle(name, default, callback)
            table.insert(self.Elements, { Type = "Toggle", Name = name, Default = default, Callback = callback })
            print("Toggle Added:", name)
        end

        function Tab:AddLabel(text)
            table.insert(self.Elements, { Type = "Label", Text = text })
            print("Label Added:", text)
        end

        function Tab:AddTextBox(name, default, callback)
            table.insert(self.Elements, { Type = "TextBox", Name = name, Default = default, Callback = callback })
            print("TextBox Added:", name)
        end

        return Tab
    end

    return Window
end

function FluentUI:Notify(title, message)
    print("[Notification]", title, "-", message)
end

return FluentUI
