

local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

function Fluent:CreateWindow(options)
    options = options or {}
    local window = {}
    window.Title = options.Title or "Window"
    window.SubTitle = options.SubTitle or ""
    window.TabWidth = options.TabWidth or 160
    window.Size = options.Size or UDim2.fromOffset(580, 460)
    window.Acrylic = options.Acrylic or false
    window.Theme = options.Theme or "Dark"
    window.MinimizeKey = options.MinimizeKey or Enum.KeyCode.LeftControl
    window.Tabs = {}

    function window:AddTab(tabOptions)
        tabOptions = tabOptions or {}
        local tab = {}
        tab.Title = tabOptions.Title or "Tab"
        tab.Icon = tabOptions.Icon or ""
        -- Fungsi-fungsi penambahan elemen UI pada tab
        function tab:AddParagraph(pOptions)
            pOptions = pOptions or {}
            print("Added Paragraph: " .. (pOptions.Title or "No Title") .. " - " .. (pOptions.Content or ""))
        end
        function tab:AddSlider(sOptions)
            sOptions = sOptions or {}
            print("Added Slider: " .. (sOptions.Title or "No Title"))
        end
        function tab:AddToggle(tOptions)
            tOptions = tOptions or {}
            print("Added Toggle: " .. (tOptions.Title or "No Title"))
        end
        function tab:AddTextBox(tbOptions)
            tbOptions = tbOptions or {}
            print("Added TextBox: " .. (tbOptions.Title or "No Title"))
        end
        function tab:AddButton(bOptions)
            bOptions = bOptions or {}
            print("Added Button: " .. (bOptions.Title or "No Title"))
        end
        table.insert(window.Tabs, tab)
        return tab
    end

    function window:SelectTab(index)
        print("Selected Tab: " .. index)
    end

    function window:Notify(notifOptions)
        notifOptions = notifOptions or {}
        print("Notification: " .. (notifOptions.Title or "No Title") .. " - " .. (notifOptions.Content or ""))
    end

    return window
end

return Fluent
